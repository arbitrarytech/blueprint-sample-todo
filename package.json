{
  "name": "todo-sample-app-components",
  "version": "0.0.0",
  "description": "",
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "scripts": {
    "fix": "concurrently npm:fix-* --raw --max-processes 1",
    "fix-eslint": "eslint . --ext .js,.vue --fix --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore",
    "fix-prettier": "prettier \"**/*.{htm,html,json,md,markdown,yml,yaml}\" --write --ignore-path .gitignore",
    "lint": "concurrently npm:lint-* --raw --max-processes 1",
    "lint-eslint": "eslint . --ext .js,.vue --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore",
    "lint-prettier": "prettier \"**/*.{htm,html,json,md,markdown,yml,yaml}\" --check --ignore-path .gitignore"
  },
  "author": "Noop Inc <hello@noop.dev>",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-vue": "^8.5.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "standard"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,vue}": [
      "eslint --fix --cache --cache-location node_modules/.cache/.eslintcache --ignore-path .gitignore"
    ],
    "**/*.{htm,html,json,md,markdown,yml,yaml}": [
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "prettier": "^2.6.0"
  }
}
